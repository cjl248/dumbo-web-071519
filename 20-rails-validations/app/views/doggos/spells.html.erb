<h1>Creating a Spell for <%= @doggo.name %> </h1>

<%= form_for(@doggo_spell) do |f| %>
  <%= f.hidden_field :doggo_id, value: @doggo.id %>

  <%= f.label :location %>
  <%= f.text_field :location %>


  <%= f.label :spell_id %>
  <%= f.collection_select :spell_id, @spells, :id, :incantation %>

  <%= f.submit %>
<% end %>
