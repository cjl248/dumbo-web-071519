<h1>Logging a Doggo Spell</h1>

<%= form_for(@doggo_spell) do |f| %>
  <%= f.label :location %>
  <%= f.text_field :location %>

  <%= f.label :doggo_id %>
  <%= f.collection_select(:doggo_id, @doggos, :id , :name) %>

  <%= f.label :spell_id %>
  <%= f.collection_select :spell_id, @spells, :id, :incantation %>

  <%= f.submit %>

<% end %>
